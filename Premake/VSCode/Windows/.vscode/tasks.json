{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "DEBUGx86 build",
            "command": "time make -j config=debug_x86",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "DEBUGx64 build",
            "command": "time make -j config=debug_x64",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "RELEASEx86 build",
            "command": "time make -j config=release_x86",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "RELEASEx64 build",
            "command": "time make -j config=release_x64",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "DEBUGx64 Run",
            "command": "time make -j config=debug_x86; ./bin/Windows-gmake2/Debug-x86/${fileBasenameNoExtension}/${fileBasenameNoExtension}.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "DEBUGx64 Run",
            "command": "time make -j config=debug_x64; ./bin/Windows-gmake2/Debug-x64/${fileBasenameNoExtension}/${fileBasenameNoExtension}.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "RELEASEx64 Run",
            "command": "time make -j config=release_x86; ./bin/Windows-gmake2/Release-x86/${fileBasenameNoExtension}/${fileBasenameNoExtension}.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "RELEASEx64 Run",
            "command": "time make -j config=release_x64; ./bin/Windows-gmake2/Release-x64/${fileBasenameNoExtension}/${fileBasenameNoExtension}.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}